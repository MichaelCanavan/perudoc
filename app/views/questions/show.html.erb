<%=image_tag("inca-jungle.jpg", class: "incaPhoto2") %>
<div id="title2"><h1> <%=@question.title%>  </h1></div>
<div class="question_border">

<h3><%=@question.description%></h3>

<p><%= link_to "Answer Question", new_question_answer_path(@question) %></p>

<p>
<ul>
  <% unless @answers.nil? %>
    <% @answers.each do |answer| %>
      <li> <%= answer.body %>  </li>
    <% end %>
  <% end %>
</ul>
</p>
</div>

<div class="edit_question_border">
<p><%= link_to "Edit Question", edit_question_path(@question) %></p>
<p><%= link_to "Delete Question", @question, method: :delete, data: {confirm: "Are you sure?"} %></p>
<p><%= link_to "Back", questions_path %></p>
</div>
