  </div>
<% end %>

<%= form_for(@testimonial) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div><br>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

